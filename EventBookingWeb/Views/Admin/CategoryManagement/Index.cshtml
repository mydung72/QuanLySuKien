@model IEnumerable<EventBookingWeb.Models.DomainModels.DBCategoryEvent>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Quản lý danh mục sự kiện</h4>
        <p class="text-muted mb-0">Tạo và quản lý các danh mục phân loại sự kiện</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Thêm danh mục
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 60px;">ID</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th class="text-center" style="width: 120px;">Số sự kiện</th>
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">#@category.CategoryEventId</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-tag text-primary"></i>
                                        </div>
                                        <strong>@category.CategoryEventName</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(category.CategoryEventDescription))
                                    {
                                        <span class="text-muted">@category.CategoryEventDescription</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Chưa có mô tả</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        var eventCount = category.Events?.Count ?? 0;
                                    }
                                    @if (eventCount > 0)
                                    {
                                        <span class="badge bg-info">@eventCount sự kiện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted">0</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@category.CategoryEventId" class="btn btn-sm btn-outline-primary me-1" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (eventCount == 0)
                                    {
                                        <form asp-action="Delete" asp-route-id="@category.CategoryEventId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled title="Không thể xóa danh mục đang có sự kiện">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-tags display-1 text-muted"></i>
                <h5 class="mt-3 text-muted">Chưa có danh mục nào</h5>
                <p class="text-muted">Tạo danh mục đầu tiên để phân loại sự kiện</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-lg me-2"></i>Thêm danh mục
                </a>
            </div>
        }
    </div>
</div>

