@model EventBookingWeb.ViewModels.Event.EventListViewModel
@{
    ViewData["Title"] = "Danh sách sự kiện";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-calendar3 me-2"></i>Khám phá sự kiện
        </h1>
        <p class="text-secondary">Tìm kiếm và đặt vé cho các sự kiện yêu thích của bạn</p>
    </div>
</div>

<!-- Filter Section -->
<div class="mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-funnel-fill text-primary me-2"></i>
                <h5 class="mb-0">Bộ lọc tìm kiếm</h5>
            </div>
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-tag me-1"></i>Danh mục
                        </label>
                        <select name="filter.CategoryId" class="form-select">
                            <option value="">Tất cả danh mục</option>
                            @foreach (var category in ViewBag.Categories as List<EventBookingWeb.Models.DomainModels.DBCategoryEvent>)
                            {
                                <option value="@category.CategoryEventId" 
                                    selected=@(Model.Filter.CategoryId == category.CategoryEventId ? "selected" : "")>
                                    @category.CategoryEventName
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-range me-1"></i>Từ ngày
                        </label>
                        <input type="date" name="filter.StartDate" class="form-control" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-check me-1"></i>Đến ngày
                        </label>
                        <input type="date" name="filter.EndDate" class="form-control" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-search me-1"></i>Tìm kiếm
                        </label>
                        <input type="text" name="filter.SearchTerm" class="form-control" placeholder="Nhập tên sự kiện..." value="@Model.Filter.SearchTerm" />
                    </div>
                    <div class="col-lg-2 col-md-12">
                        <label class="form-label fw-semibold d-block">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel me-1"></i>Lọc
                        </button>
                    </div>
                </div>
                @if (Model.Filter.CategoryId != null || !string.IsNullOrEmpty(Model.Filter.SearchTerm) || Model.Filter.StartDate != null || Model.Filter.EndDate != null)
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Xóa bộ lọc
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<!-- Results Count -->
@if (Model.Events.Any())
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-secondary mb-0">
            <i class="bi bi-info-circle me-1"></i>
            Tìm thấy <strong>@Model.TotalCount</strong> sự kiện
        </p>
    </div>
}

<!-- Upcoming Events Section -->
@{
    var upcomingEvents = ViewBag.UpcomingEvents as List<EventBookingWeb.Models.DomainModels.DBEvent> ?? new List<EventBookingWeb.Models.DomainModels.DBEvent>();
    var pastEvents = ViewBag.PastEvents as List<EventBookingWeb.Models.DomainModels.DBEvent> ?? new List<EventBookingWeb.Models.DomainModels.DBEvent>();
}

@if (upcomingEvents.Any())
{
    <div class="mb-5">
        <div class="d-flex align-items-center mb-4">
            <h3 class="mb-0">
                <i class="bi bi-calendar-check text-primary me-2"></i>Sự kiện sắp diễn ra
            </h3>
            <span class="badge bg-primary ms-2">@upcomingEvents.Count</span>
        </div>
        <div class="row g-4">
            @foreach (var eventItem in upcomingEvents)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="event-card h-100">
                        <a asp-action="Details" asp-route-id="@eventItem.EventId" class="text-decoration-none text-dark">
                            <div class="event-card-image" style="cursor: pointer;">
                                <img src="@eventItem.ImageUrl" alt="@eventItem.Title">
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-primary px-3 py-2">
                                        <i class="bi bi-calendar-event me-1"></i>@eventItem.StartDate.ToString("dd/MM")
                                    </span>
                                </div>
                                @if (eventItem.AvailableSeats <= 0)
                                {
                                    <div class="position-absolute top-0 start-0 m-3">
                                        <span class="badge bg-danger px-3 py-2">Hết chỗ</span>
                                    </div>
                                }
                            </div>
                            <div class="event-card-body">
                                <h5 class="event-card-title">@eventItem.Title</h5>
                                <div class="event-card-meta">
                                    <div><i class="bi bi-clock-fill text-primary"></i> @eventItem.StartDate.ToString("HH:mm, dd/MM/yyyy")</div>
                                    <div><i class="bi bi-geo-alt-fill text-primary"></i> @eventItem.Location</div>
                                    <div class="mb-0"><i class="bi bi-ticket-fill text-primary"></i> <strong>@eventItem.TicketPrice.ToString("N0") VNĐ</strong></div>
                                </div>
                            </div>
                        </a>
                        <div class="event-card-footer">
                            @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")) && eventItem.AvailableSeats > 0 && eventItem.StartDate > DateTime.Now)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <label class="form-label small text-muted mb-1">Số lượng vé</label>
                                        <div class="input-group input-group-sm" style="max-width: 150px;">
                                            <button class="btn btn-outline-secondary" type="button" onclick="event.stopPropagation(); changeEventQuantity(@eventItem.EventId, -1, @eventItem.AvailableSeats)">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <input type="number" class="form-control text-center" id="eventQty_@eventItem.EventId" value="1" min="1" data-max="@eventItem.AvailableSeats" data-eventid="@eventItem.EventId" style="line-height: 1.5; padding: 0.25rem 0.5rem;" readonly>
                                            <button class="btn btn-outline-secondary" type="button" onclick="event.stopPropagation(); changeEventQuantity(@eventItem.EventId, 1, @eventItem.AvailableSeats)">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge @(eventItem.AvailableSeats > 0 ? "bg-success-light text-success" : "bg-danger-light text-danger")">
                                            <i class="bi bi-people-fill me-1"></i>
                                            @if (eventItem.AvailableSeats > 0)
                                            {
                                                <text>Còn @eventItem.AvailableSeats chỗ</text>
                                            }
                                            else
                                            {
                                                <text>Hết chỗ</text>
                                            }
                                        </span>
                                    </div>
                                </div>
                                <button onclick="event.stopPropagation(); addToCartEvent(@eventItem.EventId)" class="btn btn-success btn-sm w-100 mb-2">
                                    <i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ
                                </button>
                            }
                            else
                            {
                                <div class="d-flex justify-content-center mb-2">
                                    <span class="badge @(eventItem.AvailableSeats > 0 ? "bg-success-light text-success" : "bg-danger-light text-danger")">
                                        <i class="bi bi-people-fill me-1"></i>
                                        @if (eventItem.AvailableSeats > 0)
                                        {
                                            <text>Còn @eventItem.AvailableSeats chỗ</text>
                                        }
                                        else
                                        {
                                            <text>Hết chỗ</text>
                                        }
                                    </span>
                                </div>
                            }
                            <a asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-info-circle me-1"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Past Events Section -->
@if (pastEvents.Any())
{
    <div class="mb-5">
        <div class="d-flex align-items-center mb-4">
            <h3 class="mb-0">
                <i class="bi bi-calendar-x text-secondary me-2"></i>Sự kiện đã kết thúc
            </h3>
            <span class="badge bg-secondary ms-2">@pastEvents.Count</span>
        </div>
        <div class="row g-4">
            @foreach (var eventItem in pastEvents)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="event-card h-100">
                        <a asp-action="Details" asp-route-id="@eventItem.EventId" class="text-decoration-none text-dark">
                            <div class="event-card-image" style="cursor: pointer;">
                                <img src="@eventItem.ImageUrl" alt="@eventItem.Title">
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-secondary px-3 py-2">
                                        <i class="bi bi-calendar-event me-1"></i>@eventItem.StartDate.ToString("dd/MM")
                                    </span>
                                </div>
                            </div>
                            <div class="event-card-body">
                                <h5 class="event-card-title">@eventItem.Title</h5>
                                <div class="event-card-meta">
                                    <div><i class="bi bi-clock-fill text-primary"></i> @eventItem.StartDate.ToString("HH:mm, dd/MM/yyyy")</div>
                                    <div><i class="bi bi-geo-alt-fill text-primary"></i> @eventItem.Location</div>
                                    <div><i class="bi bi-ticket-fill text-primary"></i> <strong>@eventItem.TicketPrice.ToString("N0") VNĐ</strong></div>
                                </div>
                            </div>
                        </a>
                        <div class="event-card-footer">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-secondary">
                                    <i class="bi bi-check-circle me-1"></i>Đã kết thúc
                                </span>
                            </div>
                            <a asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-outline-secondary btn-sm w-100">
                                <i class="bi bi-info-circle me-1"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (!upcomingEvents.Any() && !pastEvents.Any())
{
    <div class="row g-4 mb-5">
        <div class="col-12">
            <div class="text-center py-5">
                <i class="bi bi-search display-1 text-muted"></i>
                <h4 class="text-muted mt-3">Không tìm thấy sự kiện nào</h4>
                <p class="text-secondary">Thử thay đổi bộ lọc hoặc tìm kiếm với từ khóa khác</p>
                <a asp-action="Index" class="btn btn-primary mt-2">
                    <i class="bi bi-arrow-clockwise me-1"></i>Xem tất cả sự kiện
                </a>
            </div>
        </div>
    </div>
}

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Event pagination" class="mb-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.CurrentPage - 1)&filter.CategoryId=@Model.Filter.CategoryId&filter.SearchTerm=@Model.Filter.SearchTerm&filter.StartDate=@Model.Filter.StartDate?.ToString("yyyy-MM-dd")&filter.EndDate=@Model.Filter.EndDate?.ToString("yyyy-MM-dd")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
            }
            
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&filter.CategoryId=@Model.Filter.CategoryId&filter.SearchTerm=@Model.Filter.SearchTerm&filter.StartDate=@Model.Filter.StartDate?.ToString("yyyy-MM-dd")&filter.EndDate=@Model.Filter.EndDate?.ToString("yyyy-MM-dd")">@i</a>
                </li>
            }
            
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.CurrentPage + 1)&filter.CategoryId=@Model.Filter.CategoryId&filter.SearchTerm=@Model.Filter.SearchTerm&filter.StartDate=@Model.Filter.StartDate?.ToString("yyyy-MM-dd")&filter.EndDate=@Model.Filter.EndDate?.ToString("yyyy-MM-dd")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}

<style>
    .event-card {
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
        border-radius: 0.75rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        background: white;
    }
    
    .event-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    .event-card-image {
        position: relative;
        overflow: hidden;
        height: 220px;
    }
    
    .event-card-image img {
        transition: transform 0.3s ease;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .event-card:hover .event-card-image img {
        transform: scale(1.1);
    }
    
    .event-card-body {
        padding: 1.5rem;
        flex: 1;
    }
    
    .event-card-footer {
        padding: 0 1.5rem 1.5rem 1.5rem;
        border-top: 1px solid #f1f5f9;
        margin-top: auto;
    }
    
    .input-group input[type="number"] {
        text-align: center !important;
        font-weight: 600;
    }
    
    .bg-success-light {
        background-color: #d1fae5 !important;
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .bg-danger-light {
        background-color: #fee2e2 !important;
    }
    
    .text-danger {
        color: #ef4444 !important;
    }
</style>

@section Scripts {
    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
    {
        <script>
            function changeEventQuantity(eventId, change) {
                const qtyInput = document.getElementById('eventQty_' + eventId);
                let currentQty = parseInt(qtyInput.value) || 1;
                let newQty = currentQty + change;
                const maxQty = parseInt(qtyInput.max) || 1;
                
                if (newQty < 1) {
                    newQty = 1;
                } else if (newQty > maxQty) {
                    newQty = maxQty;
                }
                
                qtyInput.value = newQty;
            }

            function addToCartEvent(eventId) {
                const quantity = parseInt(document.getElementById('eventQty_' + eventId).value) || 1;
                
                $.ajax({
                    url: '@Url.Action("Add", "Cart")',
                    type: 'POST',
                    data: {
                        eventId: eventId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            if (typeof loadCartCount === 'function') {
                                loadCartCount();
                            }
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra');
                    }
                });
            }
        </script>
        @Html.AntiForgeryToken()
    }
}

