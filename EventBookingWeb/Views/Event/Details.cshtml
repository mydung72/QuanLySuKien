@model EventBookingWeb.ViewModels.Event.EventDetailViewModel
@{
    ViewData["Title"] = Model.Event.Title;
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-3">
    <div class="container">
        <ol class="breadcrumb bg-transparent px-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Event" asp-action="Index">Sự kiện</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Event.Title</li>
        </ol>
    </div>
</nav>

<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Hero Image -->
        <div class="card border-0 shadow-sm overflow-hidden mb-4">
            <img src="@Model.Event.ImageUrl" class="card-img-top" alt="@Model.Event.Title" style="max-height: 500px; object-fit: cover;">
        </div>
        
        <!-- Title & Badges -->
        <div class="mb-4">
            <h1 class="display-5 fw-bold mb-3">@Model.Event.Title</h1>
            <div class="d-flex flex-wrap gap-2">
                @foreach (var category in Model.Categories)
                {
                    <span class="badge bg-primary px-3 py-2">
                        <i class="bi bi-tag me-1"></i>@category.CategoryEventName
                    </span>
                }
                <span class="badge px-3 py-2 bg-@(Model.Event.EventStatus == EventBookingWeb.Models.Enums.EventStatus.Upcoming ? "info" : Model.Event.EventStatus == EventBookingWeb.Models.Enums.EventStatus.Ongoing ? "success" : "secondary")">
                    <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>@Model.Event.EventStatus
                </span>
            </div>
        </div>

        <!-- Event Info Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="bi bi-info-circle text-primary me-2"></i>Thông tin sự kiện
                </h5>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 rounded p-2">
                                    <i class="bi bi-calendar3 text-primary fs-5"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="small text-muted">Bắt đầu</div>
                                <div class="fw-semibold">@Model.Event.StartDate.ToString("dd/MM/yyyy - HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 rounded p-2">
                                    <i class="bi bi-calendar-check text-success fs-5"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="small text-muted">Kết thúc</div>
                                <div class="fw-semibold">@Model.Event.EndDate.ToString("dd/MM/yyyy - HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-danger bg-opacity-10 rounded p-2">
                                    <i class="bi bi-geo-alt-fill text-danger fs-5"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="small text-muted">Địa điểm</div>
                                <div class="fw-semibold">@Model.Event.Location</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-opacity-10 rounded p-2">
                                    <i class="bi bi-people-fill text-warning fs-5"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="small text-muted">Số chỗ</div>
                                <div class="fw-semibold">Còn @Model.Event.AvailableSeats/@Model.Event.TotalSeats chỗ</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Event.EventDescription))
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-text-paragraph text-primary me-2"></i>Mô tả
                    </h5>
                    <p class="text-secondary lh-lg">@Model.Event.EventDescription</p>
                </div>
            </div>
        }

        <!-- Content -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="bi bi-file-text text-primary me-2"></i>Nội dung chi tiết
                </h5>
                <div class="event-content">
                    @Html.Raw(Model.Event.EventContentHtml)
                </div>
            </div>
        </div>

        <!-- Related News -->
        @if (Model.RelatedNews.Any())
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-newspaper text-primary me-2"></i>Tin tức liên quan
                    </h5>
                    <div class="row g-3">
                        @foreach (var news in Model.RelatedNews)
                        {
                            <div class="col-12">
                                <div class="card border">
                                    <div class="card-body">
                                        <h6 class="mb-2">@news.Title</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3 me-1"></i>@news.CreatedAt.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Booking Sidebar -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-md sticky-top " style="top: 90px;z-index: 10">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="bi bi-ticket-perforated text-primary me-2"></i>Đặt vé ngay
                </h5>
                
                <!-- Price -->
                <div class="bg-light rounded p-3 mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Giá vé</span>
                        <span class="fs-4 fw-bold text-primary">@Model.Event.TicketPrice.ToString("N0") VNĐ</span>
                    </div>
                </div>

                <!-- Availability -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small text-muted">Tình trạng</span>
                        <span class="badge @(Model.Event.AvailableSeats > 0 ? "bg-success" : "bg-danger")">
                            @(Model.Event.AvailableSeats > 0 ? "Còn chỗ" : "Hết chỗ")
                        </span>
                    </div>
                    <div class="progress" style="height: 8px;">
                        @{
                            var percentage = Model.Event.TotalSeats > 0 ? (double)Model.Event.AvailableSeats / Model.Event.TotalSeats * 100 : 0;
                        }
                        <div class="progress-bar bg-success" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small class="text-muted">Còn @Model.Event.AvailableSeats/@Model.Event.TotalSeats chỗ</small>
                </div>
                
                <!-- Actions -->
                @if (Model.CanBook)
                {
                    @if (Model.IsLoggedIn)
                    {
                        <div class="d-grid gap-2">
                            <button onclick="addToCart(@Model.Event.EventId)" class="btn btn-outline-primary">
                                <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                            </button>
                            <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@Model.Event.EventId" 
                               class="btn btn-primary btn-lg">
                                <i class="bi bi-ticket-detailed me-2"></i>Đặt chỗ ngay
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-grid">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập để đặt chỗ
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="d-grid">
                        <button class="btn btn-secondary btn-lg" disabled>
                            <i class="bi bi-x-circle me-2"></i>
                            @(Model.Event.AvailableSeats <= 0 ? "Hết chỗ" : "Đã kết thúc")
                        </button>
                    </div>
                }

                <!-- Share -->
                <div class="mt-4 pt-4 border-top">
                    <div class="small text-muted mb-2">Chia sẻ sự kiện</div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-secondary flex-fill">
                            <i class="bi bi-facebook"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary flex-fill">
                            <i class="bi bi-twitter"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary flex-fill">
                            <i class="bi bi-link-45deg"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .event-content {
        line-height: 1.8;
        color: #475569;
    }
    
    .event-content img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
    }
    
    .event-content h1,
    .event-content h2,
    .event-content h3,
    .event-content h4,
    .event-content h5,
    .event-content h6 {
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .event-content p {
        margin-bottom: 1rem;
    }
</style>

@section Scripts {
    <script>
        function addToCart(eventId) {
            $.ajax({
                url: '@Url.Action("Add", "Cart")',
                type: 'POST',
                data: {
                    eventId: eventId,
                    quantity: 1,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        if (typeof loadCartCount === 'function') {
                            loadCartCount();
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra');
                }
            });
        }
    </script>
    @Html.AntiForgeryToken()
}

