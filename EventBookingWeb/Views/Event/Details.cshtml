@model EventBookingWeb.ViewModels.Event.EventDetailViewModel
@{
    ViewData["Title"] = Model.Event.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <img src="@Model.Event.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Event.Title">
            
            <h1>@Model.Event.Title</h1>
            
            <div class="mb-3">
                @foreach (var category in Model.Categories)
                {
                    <span class="badge bg-primary">@category.CategoryEventName</span>
                }
                <span class="badge bg-@(Model.Event.EventStatus == EventBookingWeb.Models.Enums.EventStatus.Upcoming ? "info" : Model.Event.EventStatus == EventBookingWeb.Models.Enums.EventStatus.Ongoing ? "success" : "secondary")">
                    @Model.Event.EventStatus
                </span>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-calendar"></i> Bắt đầu:</strong> @Model.Event.StartDate.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong><i class="bi bi-calendar-check"></i> Kết thúc:</strong> @Model.Event.EndDate.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-geo-alt"></i> Địa điểm:</strong> @Model.Event.Location</p>
                            <p><strong><i class="bi bi-ticket"></i> Giá vé:</strong> @Model.Event.TicketPrice.ToString("N0") VNĐ</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p><strong><i class="bi bi-people"></i> Số chỗ:</strong> Còn @Model.Event.AvailableSeats/@Model.Event.TotalSeats chỗ</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Event.EventDescription))
            {
                <div class="mb-3">
                    <h4>Mô tả</h4>
                    <p>@Model.Event.EventDescription</p>
                </div>
            }

            <div class="mb-3">
                <h4>Nội dung chi tiết</h4>
                @Html.Raw(Model.Event.EventContentHtml)
            </div>

            @if (Model.RelatedNews.Any())
            {
                <div class="mb-3">
                    <h4>Tin tức liên quan</h4>
                    @foreach (var news in Model.RelatedNews)
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <h5>@news.Title</h5>
                                <small class="text-muted">@news.CreatedAt.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Đặt chỗ ngay</h5>
                    <p class="card-text">
                        <strong>Giá vé:</strong> @Model.Event.TicketPrice.ToString("N0") VNĐ<br/>
                        <strong>Còn lại:</strong> @Model.Event.AvailableSeats chỗ
                    </p>
                    
                    @if (Model.CanBook)
                    {
                        @if (Model.IsLoggedIn)
                        {
                            <button onclick="addToCart(@Model.Event.EventId)" class="btn btn-primary btn-lg w-100 mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16" style="margin-right: 5px;">
                                    <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                </svg>
                                Thêm vào giỏ hàng
                            </button>
                            <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@Model.Event.EventId" 
                               class="btn btn-success btn-lg w-100">
                                Đặt chỗ ngay
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100">
                                Đăng nhập để đặt chỗ
                            </a>
                        }
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg w-100" disabled>
                            @(Model.Event.AvailableSeats <= 0 ? "Hết chỗ" : "Đã kết thúc")
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addToCart(eventId) {
            $.ajax({
                url: '@Url.Action("Add", "Cart")',
                type: 'POST',
                data: {
                    eventId: eventId,
                    quantity: 1,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        if (typeof loadCartCount === 'function') {
                            loadCartCount();
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra');
                }
            });
        }
    </script>
    @Html.AntiForgeryToken()
}

