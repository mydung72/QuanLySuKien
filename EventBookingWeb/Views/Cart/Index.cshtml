@model EventBookingWeb.ViewModels.Cart.CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container my-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-cart3 text-primary me-3" style="font-size: 2rem;"></i>
        <div>
            <h2 class="mb-0">Giỏ hàng của tôi</h2>
            <p class="text-muted mb-0">@Model.Items.Count() sự kiện trong giỏ hàng</p>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @foreach (var item in Model.Items)
                {
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-body p-3">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <div class="position-relative" style="border-radius: var(--radius-lg); overflow: hidden; height: 140px;">
                                        <img src="@item.EventImageUrl" class="img-fluid w-100 h-100" alt="@item.EventTitle" style="object-fit: cover;">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <h5 class="mb-2">@item.EventTitle</h5>
                                    <div class="text-muted small mb-2">
                                        <div class="mb-1">
                                            <i class="bi bi-calendar3 text-primary me-1"></i> @item.EventStartDate.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                        <div class="mb-1">
                                            <i class="bi bi-geo-alt text-primary me-1"></i> @item.Location
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="fw-semibold text-primary">@item.TicketPrice.ToString("N0") VNĐ</span>
                                        <span class="badge @(item.AvailableSeats > 0 ? "bg-success-light text-success" : "bg-danger-light text-danger")">
                                            <i class="bi bi-people-fill me-1"></i>Còn @item.AvailableSeats chỗ
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex flex-column h-100 justify-content-between">
                                        <div>
                                            <label class="form-label small text-muted mb-1">Số lượng</label>
                                            <div class="input-group input-group-sm" style="max-width: 130px;">
                                                <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(@item.CartId, @item.Quantity - 1)">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <input type="number" class="form-control text-center" value="@item.Quantity" min="1" max="@item.AvailableSeats" id="qty_@item.CartId" readonly>
                                                <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(@item.CartId, @item.Quantity + 1)">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="mb-2">
                                                <div class="small text-muted">Tổng tiền</div>
                                                <div class="h5 mb-0 text-primary"><span id="subtotal_@item.CartId">@item.SubTotal.ToString("N0")</span> VNĐ</div>
                                            </div>
                                            <button class="btn btn-sm btn-outline-danger" onclick="removeItem(@item.CartId)">
                                                <i class="bi bi-trash me-1"></i>Xóa
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="text-end mb-3">
                    <form asp-action="Clear" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa tất cả sự kiện?');" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Xóa tất cả
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-md sticky-top" style="top: 90px;">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4">
                            <i class="bi bi-receipt text-primary me-2"></i>Tổng kết đơn hàng
                        </h5>
                        
                        <div class="bg-light rounded p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Số lượng vé</span>
                                <span class="fw-semibold">@Model.TotalItems vé</span>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">Tổng tiền</span>
                                <span class="h4 mb-0 text-primary">@Model.TotalAmount.ToString("N0") VNĐ</span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-controller="Booking" asp-action="Create" class="btn btn-primary btn-lg" onclick="return confirm('Bạn có muốn đặt chỗ cho tất cả sự kiện trong giỏ hàng?');">
                                <i class="bi bi-check-circle me-2"></i>Đặt chỗ ngay
                            </a>
                            <a asp-controller="Event" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Tiếp tục xem sự kiện
                            </a>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex align-items-start text-muted small">
                                <i class="bi bi-shield-check text-success me-2 mt-1"></i>
                                <span>Thanh toán an toàn và bảo mật</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-cart-x display-1 text-muted"></i>
                    </div>
                    <h3 class="mb-3">Giỏ hàng trống</h3>
                    <p class="text-muted mb-4">Bạn chưa có sự kiện nào trong giỏ hàng. Hãy khám phá và thêm các sự kiện yêu thích của bạn!</p>
                    <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-search me-2"></i>Khám phá sự kiện
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-success-light {
        background-color: #d1fae5 !important;
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .bg-danger-light {
        background-color: #fee2e2 !important;
    }
    
    .text-danger {
        color: #ef4444 !important;
    }
</style>

@section Scripts {
    <script>
        function updateQuantity(cartId, newQuantity) {
            if (newQuantity < 1) {
                removeItem(cartId);
                return;
            }

            $.ajax({
                url: '@Url.Action("Update", "Cart")',
                type: 'POST',
                data: {
                    cartId: cartId,
                    quantity: newQuantity,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        $('#qty_' + cartId).val(response.subTotal > 0 ? newQuantity : 0);
                        $('#subtotal_' + cartId).text(response.subTotal.toLocaleString('vi-VN'));
                        loadCartCount();
                        if (response.cartCount === 0) {
                            location.reload();
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra');
                }
            });
        }

        function removeItem(cartId) {
            if (!confirm('Bạn có chắc muốn xóa sự kiện này khỏi giỏ hàng?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("Remove", "Cart")',
                type: 'POST',
                data: {
                    cartId: cartId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra');
                }
            });
        }

        function loadCartCount() {
            $.get('@Url.Action("GetCartCount", "Cart")', function(data) {
                if (data.count > 0) {
                    $('#cartCount').text(data.count).show();
                } else {
                    $('#cartCount').hide();
                }
            });
        }
    </script>
}

