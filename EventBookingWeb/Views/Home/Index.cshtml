@{
    ViewData["Title"] = "Trang chủ";
    var banners = ViewBag.Banners as List<EventBookingWeb.Models.DomainModels.DBBanner>;
    var upcomingEvents = ViewBag.UpcomingEvents as List<EventBookingWeb.Models.DomainModels.DBEvent>;
    var latestNews = ViewBag.LatestNews as List<EventBookingWeb.Models.DomainModels.DBNews>;
}

<!-- Hero Banner -->
@if (banners != null && banners.Any())
{
    <div class="hero-banner mb-5">
        <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-indicators">
                @for (int i = 0; i < banners.Count; i++)
                {
                    <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @for (int i = 0; i < banners.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        @if (!string.IsNullOrEmpty(banners[i].LinkUrl))
                        {
                            <a href="@banners[i].LinkUrl" style="display: block;">
                                <img src="@banners[i].ImageUrl" class="d-block w-100" alt="Banner" style="height: 450px; object-fit: cover; cursor: pointer;">
                            </a>
                        }
                        else
                        {
                            <img src="@banners[i].ImageUrl" class="d-block w-100" alt="Banner" style="height: 450px; object-fit: cover; cursor: pointer;" onclick="window.location.href='@Url.Action("Index", "Event")'">
                        }
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
}

<!-- Upcoming Events Section -->
<section class="mb-5">
    <div class="section-header">
        <h2 class="section-title">Sự kiện sắp diễn ra</h2>
        <div class="section-divider"></div>
        <p class="section-subtitle">Khám phá những sự kiện thú vị đang chờ đón bạn</p>
    </div>
    
    <div class="row g-4">
        @if (upcomingEvents != null && upcomingEvents.Any())
        {
            foreach (var eventItem in upcomingEvents)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="event-card h-100">
                        <a asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.EventId" class="text-decoration-none text-dark">
                            <div class="event-card-image" style="cursor: pointer;">
                                <img src="@eventItem.ImageUrl" alt="@eventItem.Title">
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-primary px-3 py-2">
                                        <i class="bi bi-calendar-event me-1"></i>@eventItem.StartDate.ToString("dd/MM")
                                    </span>
                                </div>
                                @if (eventItem.AvailableSeats <= 0)
                                {
                                    <div class="position-absolute top-0 start-0 m-3">
                                        <span class="badge bg-danger px-3 py-2">Hết chỗ</span>
                                    </div>
                                }
                            </div>
                            <div class="event-card-body">
                                <h5 class="event-card-title">@eventItem.Title</h5>
                                <div class="event-card-meta">
                                    <div><i class="bi bi-clock-fill text-primary"></i> @eventItem.StartDate.ToString("HH:mm, dd/MM/yyyy")</div>
                                    <div><i class="bi bi-geo-alt-fill text-primary"></i> @eventItem.Location</div>
                                    <div><i class="bi bi-ticket-fill text-primary"></i> <strong>@eventItem.TicketPrice.ToString("N0") VNĐ</strong></div>
                                </div>
                            </div>
                        </a>
                        <div class="event-card-footer">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge @(eventItem.AvailableSeats > 0 ? "bg-success-light text-success" : "bg-danger-light text-danger")">
                                    <i class="bi bi-people-fill me-1"></i>
                                    @if (eventItem.AvailableSeats > 0)
                                    {
                                        <text>Còn @eventItem.AvailableSeats chỗ</text>
                                    }
                                    else
                                    {
                                        <text>Hết chỗ</text>
                                    }
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")) && eventItem.AvailableSeats > 0 && eventItem.StartDate > DateTime.Now)
                            {
                                <div class="mb-2">
                                    <label class="form-label small text-muted mb-1">Số lượng vé</label>
                                    <div class="input-group input-group-sm" style="max-width: 150px;">
                                        <button class="btn btn-outline-secondary" type="button" onclick="event.stopPropagation(); changeHomeQuantity(@eventItem.EventId, -1)">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" class="form-control text-center" id="homeQty_@eventItem.EventId" value="1" min="1" max="@eventItem.AvailableSeats" style="line-height: 1.5; padding: 0.25rem 0.5rem;" readonly>
                                        <button class="btn btn-outline-secondary" type="button" onclick="event.stopPropagation(); changeHomeQuantity(@eventItem.EventId, 1)">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <button onclick="event.stopPropagation(); addToCartHome(@eventItem.EventId)" class="btn btn-outline-success btn-sm w-100 mb-2">
                                    <i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ
                                </button>
                            }
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-info-circle me-1"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted"></i>
                    <p class="text-muted mt-3">Chưa có sự kiện nào sắp diễn ra.</p>
                </div>
            </div>
        }
    </div>
    
    @if (upcomingEvents != null && upcomingEvents.Any())
    {
        <div class="text-center mt-5">
            <a asp-controller="Event" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-grid-3x3-gap me-2"></i>Xem tất cả sự kiện
            </a>
        </div>
    }
</section>

<!-- Latest News Section -->
@if (latestNews != null && latestNews.Any())
{
    <section class="mb-5">
        <div class="section-header">
            <h2 class="section-title">Tin tức mới nhất</h2>
            <div class="section-divider"></div>
            <p class="section-subtitle">Cập nhật thông tin và xu hướng mới nhất</p>
        </div>
        
        <div class="row g-4">
            @foreach (var news in latestNews)
            {
                <div class="col-lg-4 col-md-6">
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@news.EventId" class="text-decoration-none text-dark">
                        <div class="card h-100 border-0 shadow-sm" style="cursor: pointer;">
                            <div class="position-relative overflow-hidden" style="height: 220px;">
                                <img src="@news.ImageUrl" class="card-img-top h-100" alt="@news.Title" style="object-fit: cover; transition: transform 0.3s;">
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-2 text-muted small">
                                    <i class="bi bi-calendar3 me-2"></i>
                                    <span>@news.CreatedAt.ToString("dd/MM/yyyy")</span>
                                </div>
                                <h5 class="card-title">@news.Title</h5>
                                @if (!string.IsNullOrEmpty(news.Event?.Title))
                                {
                                    <p class="card-text text-secondary">
                                        <i class="bi bi-tag-fill me-1"></i>@news.Event.Title
                                    </p>
                                }
                            </div>
                            <div class="card-footer bg-transparent border-0 pb-3">
                                <span class="text-primary text-decoration-none fw-semibold">
                                    Đọc thêm <i class="bi bi-arrow-right ms-1"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>
}

<style>
    .event-card {
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
        border-radius: 0.75rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        background: white;
    }
    
    .event-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    .event-card-image {
        position: relative;
        overflow: hidden;
        height: 220px;
    }
    
    .event-card-image img {
        transition: transform 0.3s ease;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .event-card:hover .event-card-image img {
        transform: scale(1.1);
    }
    
    .event-card-body {
        padding: 1.5rem;
        flex: 1;
    }
    
    .event-card-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #1e293b;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .event-card-meta {
        font-size: 0.9rem;
        color: #64748b;
    }
    
    .event-card-meta > div {
        margin-bottom: 0.5rem;
    }
    
    .event-card-meta i {
        width: 20px;
    }
    
    .event-card-footer {
        padding: 0 1.5rem 1.5rem 1.5rem;
        border-top: 1px solid #f1f5f9;
        margin-top: auto;
    }
    
    .bg-success-light {
        background-color: #d1fae5 !important;
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .bg-danger-light {
        background-color: #fee2e2 !important;
    }
    
    .text-danger {
        color: #ef4444 !important;
    }
    
    .card:hover img {
        transform: scale(1.05);
    }
    
    .input-group input[type="number"] {
        text-align: center !important;
        font-weight: 600;
    }
</style>

@section Scripts {
    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
    {
        <script>
            function changeHomeQuantity(eventId, change) {
                const qtyInput = document.getElementById('homeQty_' + eventId);
                let currentQty = parseInt(qtyInput.value) || 1;
                let newQty = currentQty + change;
                const maxQty = parseInt(qtyInput.max) || 1;
                
                if (newQty < 1) {
                    newQty = 1;
                } else if (newQty > maxQty) {
                    newQty = maxQty;
                }
                
                qtyInput.value = newQty;
            }

            function addToCartHome(eventId) {
                const quantity = parseInt(document.getElementById('homeQty_' + eventId).value) || 1;
                
                $.ajax({
                    url: '@Url.Action("Add", "Cart")',
                    type: 'POST',
                    data: {
                        eventId: eventId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            if (typeof loadCartCount === 'function') {
                                loadCartCount();
                            }
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra');
                    }
                });
            }
        </script>
        @Html.AntiForgeryToken()
    }
}
