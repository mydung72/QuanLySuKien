@model EventBookingWeb.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-5" style="max-width: 900px;">
    <h3 class="text-center mb-4 fw-bold">Thông tin cá nhân</h3>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <!-- Form -->
            <form asp-action="Profile" method="post">
                @Html.AntiForgeryToken()
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Họ tên</label>
                    <input asp-for="FullName" class="form-control rounded-3" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control rounded-3 bg-light" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control rounded-3" />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Ngày tạo tài khoản</label>
                    <input class="form-control rounded-3 bg-light"
                           value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")"
                           disabled />
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        Hủy
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i>Lưu thay đổi
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
