@model EventBookingWeb.ViewModels.Booking.BookingCreateViewModel
@{
    ViewData["Title"] = "Đặt chỗ";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Đặt chỗ: @Model.EventTitle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="EventId" />
                        <input type="hidden" asp-for="EventTitle" />
                        <input type="hidden" asp-for="TicketPrice" />
                        <input type="hidden" asp-for="AvailableSeats" />

                        <div class="mb-3">
                            <h5>Thông tin sự kiện</h5>
                            <p><strong>Sự kiện:</strong> @Model.EventTitle</p>
                            <p><strong>Giá vé:</strong> @Model.TicketPrice.ToString("N0") VNĐ</p>
                            <p><strong>Số chỗ còn lại:</strong> @Model.AvailableSeats</p>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Số lượng vé</label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" max="@Model.AvailableSeats" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AttendeeNotes" class="form-label">Ghi chú (tuỳ chọn)</label>
                            <textarea asp-for="AttendeeNotes" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="alert alert-info">
                            <strong>Tổng tiền:</strong> <span id="totalAmount">@Model.TotalAmount.ToString("N0")</span> VNĐ
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Tiếp tục thanh toán</button>
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Quay lại</a>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('input[name="Quantity"]').addEventListener('change', function() {
            var quantity = parseInt(this.value) || 0;
            var ticketPrice = @Model.TicketPrice;
            var total = quantity * ticketPrice;
            document.getElementById('totalAmount').textContent = total.toLocaleString('vi-VN');
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

