@model EventBookingWeb.ViewModels.Booking.PaymentViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>Thanh toán</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5>Thông tin đặt chỗ</h5>
                        <p><strong>Sự kiện:</strong> @Model.EventTitle</p>
                        <p><strong>Ngày:</strong> @Model.EventDate?.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Số lượng:</strong> @Model.Quantity vé</p>
                        <hr>
                        <h4><strong>Tổng tiền:</strong> @Model.Amount.ToString("N0") VNĐ</h4>
                    </div>

                    <form asp-action="ProcessPayment" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="BookingId" />
                        <input type="hidden" asp-for="Amount" />
                        <input type="hidden" name="PaymentMethod" value="Cash" />

                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Thanh toán trực tiếp tại sự kiện</strong>
                            <p class="mb-0 mt-2 small">Vui lòng thanh toán bằng tiền mặt khi đến tham dự sự kiện. Mang theo mã đặt chỗ để xác nhận.</p>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Xác nhận đặt chỗ
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.BookingId" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

