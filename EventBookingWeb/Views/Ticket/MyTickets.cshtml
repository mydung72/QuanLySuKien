@model EventBookingWeb.ViewModels.Ticket.TicketListViewModel
@{
    ViewData["Title"] = "Vé của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-ticket-perforated me-2"></i>Vé của tôi</h2>
        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i> Xem lịch sử đặt chỗ
        </a>
    </div>

    @if (Model.Tickets.Any())
    {
        <div class="row">
            @foreach (var ticket in Model.Tickets)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 ticket-card shadow-sm">
                        <div class="position-relative">
                            <img src="@ticket.EventImageUrl" class="card-img-top" alt="@ticket.EventTitle" style="height: 180px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Hợp lệ</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate" title="@ticket.EventTitle">@ticket.EventTitle</h5>
                            <div class="mb-3">
                                <p class="mb-1 text-muted">
                                    <i class="bi bi-calendar-event me-2"></i>@ticket.EventStartDate.ToString("dd/MM/yyyy HH:mm")
                                </p>
                                <p class="mb-1">
                                    <i class="bi bi-upc me-2"></i><strong>Mã vé:</strong> 
                                    <span class="font-monospace text-primary">@ticket.TicketCode</span>
                                </p>
                                <p class="mb-0 text-muted small">
                                    <i class="bi bi-clock me-2"></i>Ngày mua: @ticket.CreatedAt.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@ticket.TicketId" class="btn btn-primary">
                                    <i class="bi bi-qr-code me-1"></i> Xem vé & QR Code
                                </a>
                                <a asp-action="Download" asp-route-id="@ticket.TicketId" class="btn btn-outline-secondary">
                                    <i class="bi bi-download me-1"></i> Tải PDF
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-ticket-perforated display-1 text-muted"></i>
            </div>
            <h4 class="text-muted">Bạn chưa có vé nào</h4>
            <p class="text-muted">Hãy đặt vé tham gia sự kiện để nhận vé điện tử!</p>
            <a asp-controller="Event" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-search me-1"></i> Khám phá sự kiện
            </a>
        </div>
    }
</div>

<style>
    .ticket-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 12px;
        overflow: hidden;
    }
    .ticket-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    .font-monospace {
        font-family: 'Courier New', monospace;
        font-weight: 600;
    }
</style>

