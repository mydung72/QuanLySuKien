@model EventBookingWeb.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="~/css/account.css" />

<div class="account-container">
    <div class="account-card">
        <div class="account-icon">
            <i class="bi bi-person-circle"></i>
        </div>
        <h2>Chào mừng trở lại</h2>
        <p class="subtitle">Đăng nhập để tiếp tục khám phá sự kiện</p>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            
            <div class="form-group">
                <label asp-for="Email">
                    <i class="bi bi-envelope"></i>Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="your@email.com" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">
                    <i class="bi bi-lock"></i>Mật khẩu
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">Ghi nhớ</label>
                </div>
                <a asp-action="ForgotPassword" class="text-note" style="margin: 0;">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn-submit">
                <i class="bi bi-box-arrow-in-right"></i>Đăng nhập
            </button>

            <div class="divider">hoặc</div>

            <p class="text-note mb-0">
                Chưa có tài khoản?
                <a asp-action="Register">Đăng ký ngay</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
